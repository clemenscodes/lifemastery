{
    "name": "web-finance",
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/clients/web/finance",
    "projectType": "application",
    "targets": {
        "start": {
            "dependsOn": ["build"],
            "executor": "@nrwl/next:server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "web-finance:build"
            },
            "configurations": {
                "development": {
                    "dev": true
                },
                "production": {
                    "dev": false
                }
            }
        },
        "build": {
            "executor": "@nrwl/next:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "root": "apps/clients/web/finance",
                "outputPath": "dist/apps/clients/web/finance",
                "postcssConfig": "apps/clients/web/finance/postcss.config.js"
            }
        },
        "export": {
            "dependsOn": ["build"],
            "executor": "@nrwl/next:export",
            "options": {
                "buildTarget": "web-finance:build"
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/clients/web/finance/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/clients/web/finance/**/*.{ts,tsx,js,jsx}"]
            }
        },
        "image": {
            "executor": "@nx-tools/nx-container:build",
            "defaultConfiguration": "development",
            "options": {
                "engine": "docker",
                "load": true
            },
            "configurations": {
                "development": {
                    "metadata": {
                        "images": [
                            "europe-west3-docker.pkg.dev/finance-development-375914/finance/web"
                        ],
                        "tags": ["type=schedule", "type=sha"]
                    }
                },
                "production": {
                    "metadata": {
                        "images": [
                            "europe-west3-docker.pkg.dev/finance-production-375914/finance/web"
                        ],
                        "tags": ["type=schedule", "type=sha"]
                    }
                }
            }
        },
        "docker": {
            "executor": "nx:run-commands",
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "command": "INPUT_TAGS=$(git rev-parse --short HEAD) nx image web-finance --no-dte"
                },
                "production": {
                    "command": "INPUT_TAGS=$(git rev-parse --short HEAD) nx image web-finance --no-dte --configuration=production"
                }
            }
        },
        "standalone": {
            "dependsOn": ["build"],
            "command": "./apps/clients/web/finance/scripts/standalone.sh"
        },
        "run-docker": {
            "dependsOn": ["docker"],
            "command": "apps/clients/web/finance/scripts/docker.sh"
        },
        "cdn": {
            "command": "apps/clients/web/finance/scripts/upload_assets_to_cdn.sh"
        },
        "deploy": {
            "command": "apps/clients/web/finance/scripts/deploy.sh"
        },
        "terraform": {
            "executor": "nx:run-commands",
            "defaultConfiguration": "development",
            "configurations": {
                "development": {
                    "command": "apps/clients/web/finance/scripts/terraform.sh development"
                },
                "production": {
                    "command": "apps/clients/web/finance/scripts/terraform.sh production"
                }
            }
        }
    },
    "implicitDependencies": ["infra-run", "infra-artifact", "infra-bucket"],
    "tags": []
}
